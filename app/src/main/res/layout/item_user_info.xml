<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:elevation="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_avatar_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:contentDescription="@string/imageavatar" />

            <TextView
                android:id="@+id/tv_fname_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_avatar_user"
                android:padding="8dp"
                android:text="@string/lorem_ipsum"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/tv_lname_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_fname_user"
                android:layout_toEndOf="@id/iv_avatar_user"
                android:padding="8dp"
                android:text="@string/lorem_ipsum" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>